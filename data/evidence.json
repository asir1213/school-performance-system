<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
<meta charset="UTF-8">
<title>عرض الأدلة | نظام تقييم أداء المدارس</title>

<style>
body {
  margin: 0;
  font-family: Tahoma, Arial;
  background: #f4f7fb;
  display: flex;
}

/* Sidebar */
.sidebar {
  width: 260px;
  background: #1f3c88;
  color: white;
  height: 100vh;
  padding: 20px;
}

.sidebar h2 {
  margin: 0 0 20px;
}

.sidebar a {
  display: block;
  color: white;
  text-decoration: none;
  padding: 12px;
  border-radius: 8px;
  margin-bottom: 8px;
}

.sidebar a:hover {
  background: #2563eb;
}

/* Main */
.main {
  flex: 1;
  padding: 30px;
}

.header {
  background: white;
  padding: 15px 25px;
  border-radius: 12px;
  box-shadow: 0 6px 15px rgba(0,0,0,0.08);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cards {
  margin-top: 30px;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 20px;
}

.card {
  background: white;
  border-radius: 14px;
  padding: 20px;
  box-shadow: 0 8px 20px rgba(0,0,0,0.08);
}

.card h3 {
  margin-top: 0;
  color: #1f3c88;
}

.card p {
  margin: 6px 0;
  font-size: 14px;
}

.badge {
  display: inline-block;
  padding: 4px 10px;
  border-radius: 20px;
  font-size: 12px;
  background: #e0e7ff;
  color: #1f3c88;
  margin-top: 8px;
}
</style>
</head>

<body>

<div class="sidebar">
  <h2>نظام التقييم</h2>
  <a href="dashboard.html">الرئيسية</a>
  <a href="upload.html">رفع الأدلة</a>
  <a href="evidence.html">عرض الأدلة</a>
  <a href="#">التقارير</a>
</div>

<div class="main">

  <div class="header">
    <div id="userInfo"></div>
    <button onclick="logout()">خروج</button>
  </div>

  <div class="cards" id="evidenceContainer">
    <!-- الأدلة تظهر هنا -->
  </div>

</div>

<script>
const user = JSON.parse(localStorage.getItem("user"));
if (!user) window.location.href = "login.html";

document.getElementById("userInfo").innerText =
  user.name + " | " + user.role;

/* تحميل الأدلة */
const container = document.getElementById("evidenceContainer");
const evidenceList = JSON.parse(localStorage.getItem("evidence")) || [];

if (evidenceList.length === 0) {
  container.innerHTML = "<p>لا توجد أدلة مرفوعة حتى الآن</p>";
} else {
  evidenceList.forEach(ev => {
    // المعلم يرى أدلته فقط
    if (user.role === "teacher" && ev.user !== user.email) return;

    const card = document.createElement("div");
    card.className = "card";
    card.innerHTML = `
      <h3>${ev.title}</h3>
      <p><strong>المجال:</strong> ${ev.domain}</p>
      <p><strong>المعيار:</strong> ${ev.standard}</p>
      <p><strong>الوصف:</strong> ${ev.description}</p>
      <p><strong>المدرسة:</strong> ${ev.school}</p>
      <p><strong>التاريخ:</strong> ${new Date(ev.date).toLocaleDateString()}</p>
      <span class="badge">قيد المراجعة</span>
    `;
    container.appendChild(card);
  });
}

function logout() {
  localStorage.removeItem("user");
  window.location.href = "login.html";
}
</script>

</body>
</html>
